{
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.snippetStatusText": "üå†",
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.messageLevel": "error",
  "coc.source.around.firstMatch": false,
  "coc.source.buffer.firstMatch": false,
  "suggest.detailMaxLength": 60,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.autoTrigger": "always",
  "suggest.timeout": 5000,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",
  "suggest.snippetIndicator": "",
  "suggest.triggerCompletionWait": 100,
  "suggest.echodocSupport": true,
  "flutter.openDevLogSplitCommand": "botright 12split",
  "flutter.lsp.initialization.onlyAnalyzeProjectsWithOpenFiles": false,

  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "‚ùå",
  "diagnostic.warningSign": "üî∫",
  "diagnostic.infoSign": "üí¨",
  "diagnostic.hintSign": "üí°",
  "tabnine.priority": 90,
  "coc.source.word.priority": 20,

  "Lua": {
    "workspace.library": {
      "/opt/neovim.nightly/usr/share/nvim/runtime/lua": true,
      "/opt/neovim.nightly/usr/share/nvim/runtime/lua/vim": true,
      "/opt/neovim.nightly/usr/share/nvim/runtime/lua/vim/lsp": true
    },
    "diagnostics": {
      "globals": ["vim"]
    }
  },

  "languageserver": {
    "golang": {
      "command": "go-langserver",
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": [
        "build.sbt"
      ],
      "filetypes": [
        "scala",
        "sbt"
      ]
    },
    "rust": {
      "command": "rustup run' nightly rls",
      "filetypes": [
        "rust"
      ],
      "initializationOptions": {}
    },
    "kotlin": {
      "command": "~/github/KotlinLanguageServer/server/build/install/server/bin/server",
      "filetypes": [
        "kotlin"
      ],
      "initializationOptions": {}
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    }
  }
}
